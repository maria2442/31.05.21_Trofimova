#include <iostream>
#include <fstream>
using namespace std;
int main()
{
    int a,b=0,c,d,i=0,j=0;
    string s,q,w,r;
    ifstream file("input.txt");
    file >> s;
    j=s.size()-1;
    while(i<s.size()-1)
    {
        while(j>i)
        {
            if(s[i]==s[j])
                a=j-i;
            if(a>b)
            {
                b=a;
                w=s[i];
            }
            j--;
        }
        i++;
    }
    cout<<w<<" "<<b-1;
}
